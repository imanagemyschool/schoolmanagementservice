# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET   /about                      @controllers.HomeController.about

GET   /sms/v1/api/user            @controllers.LoginController.getUser(username: Option[String])
GET   /sms/v1/api/userschool      @controllers.LoginController.getUserSchool(userId: Option[Long])
POST  /sms/v1/api/authenticate    @controllers.LoginController.authenticateUser

GET   /sms/v1/api/school          @controllers.SchoolController.getSchool(schoolCode: String)

GET   /sms/v1/api/students        @controllers.StudentController.getStudents(userId: Long)
GET   /sms/v1/api/studentaddress  @controllers.StudentController.getStudentAddress(studentId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

    